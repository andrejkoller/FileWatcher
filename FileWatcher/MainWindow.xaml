<Window x:Class="FileWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileWatcher"
        mc:Ignorable="d"
        Title="File Watcher" 
        Height="600" Width="1200"
        Background="#1e1e2e"
        Foreground="#e0e0e0"
        FontSize="16">

    <Window.Resources>
        <!-- Global Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#56b6c2"/>
            <Setter Property="Foreground" Value="#1e1e2e"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3b8f99"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="BorderBrush" Value="#3b8f99"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Optional Border Style -->
        <Style TargetType="Border">
            <Setter Property="Background" Value="#2a2a3c"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*" />
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Top Navigation Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left">
            <Button x:Name="StatusOutputButton" Content="Output" Click="StatusOutputButton_Click"/>
            <Button x:Name="WatcherInstancesButton" Content="Watchers" Click="WatcherInstancesButton_Click"/>
            <Button x:Name="OptionsButton" Content="Options" Click="OptionsButton_Click"/>
        </StackPanel>

        <!-- Dynamic Content Area -->
        <Border Grid.Row="1" Margin="0,20,0,0">
            <ContentControl x:Name="ContentArea"/>
        </Border>
    </Grid>
</Window>