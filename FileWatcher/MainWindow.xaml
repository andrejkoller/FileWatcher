<Window x:Class="FileWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileWatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="PathTextBox" TextChanged="PathTextBox_TextChanged" Text="Enter a directory path" Foreground="Black" Background="White" FontSize="16" Grid.Row="0" Grid.ColumnSpan="3" />

        <ComboBox x:Name="FileTypeComboBox" SelectionChanged="FileTypeComboBox_SelectionChanged" IsEnabled="False" FontSize="16" Foreground="Black" Background="White" Grid.Row="2" Grid.Column="0" />

        <CheckBox x:Name="IncludeSubdirectoriesCheckbox" Content="Include Subdirectories" IsChecked="False" Checked="IncludeSubdirectoriesCheckbox_Checked" Unchecked="IncludeSubdirectoriesCheckbox_Unchecked" IsEnabled="False" Grid.Row="0" Grid.Column="4" />

        <Border BorderThickness="1" BorderBrush="Gray" Background="White" Padding="5" Grid.Row="4" Grid.RowSpan="5" Grid.ColumnSpan="5">
            <ScrollViewer Grid.Row="4" Grid.RowSpan="5" Grid.ColumnSpan="5">
                <StackPanel x:Name="StatusPanel" />
            </ScrollViewer>
        </Border>

        <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" Grid.Row="10" Grid.Column="0" />
        <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" IsEnabled="False" Grid.Row="10" Grid.Column="2" />
        <Button x:Name="SettingsButton" Content="Settings" Click="SettingsButton_Click" Grid.Row="10" Grid.Column="4" />
    </Grid>
</Window>
